{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "importHelpers": true,
    "allowjs": true
  },
  "include": ["src/**/*"]
}
